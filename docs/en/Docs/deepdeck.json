              },
              {
                "name": "mute",
                "key_code": 172
              },
              {
                "name": "layer",
                "key_code": 402
              }
            ],
            "items": {
              "$ref": "#/components/schemas/Layer_row0"
            }
          },
          "row1": {
            "type": "array",
            "example": [
              {
                "name": "nWind",
                "key_code": 502
              },
              {
                "name": "PWind",
                "key_code": 503
              },
              {
                "name": "F11",
