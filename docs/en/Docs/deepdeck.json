{
  "openapi": "3.0.0",
  "info": {
    "title": "DeepDeck Ahuyama API",
    "description": "DeepDeck configuration API",
    "contact": {
      "email": "deepdeck@dsd.dev"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://virtserver.swaggerhub.com/DeepDeckAhuyama/DeepDeck/1.0.0",
      "description": "SwaggerHub API Auto Mocking"
    },
    {
      "url": "http://{DeepDeckIP}",
      "description": "Your DeepDeck (you have to allow unsafe content)",
      "variables": {
        "DeepDeckIP": {
          "description": "IP of DeepDeck",
          "default": "192.168.4.1"
        }
      }
    }
  ],
  "tags": [
    {
      "name": "layers",
      "description": "Operations for Layers"
    },
    {
      "name": "macros",
      "description": "Operations for Macros"
    }
  ],
  "paths": {
    "/api/layers/layer_names": {
      "get": {
        "tags": [
          "layers"
        ],
        "summary": "Return main information of existing layers",
        "description": "Return an array with the name, position, id, and active flag of the existing layers\n",
        "operationId": "getLAyerNames",
        "responses": {
          "200": {
            "description": "List of layer returned.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LayerDataArray"
                }
              }
            }
          }
        }
      }
    },
    "/api/layers": {
      "get": {
        "tags": [
          "layers"
        ],
        "summary": "Return information of the selected layer",
        "description": "Return the content of the layer\n",
        "operationId": "getLayer",
        "parameters": [
          {
            "name": "uuid",
            "in": "query",
            "description": "The layer ID",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string",
              "example": "62d8ba"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Layer returned",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Layer"
                }
              }
            }
          },
          "400": {
            "description": "Layer not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LayerDataArray": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "example": [
              {
                "name": "Media",
                "pos": 0,
                "active": true,
                "uuid": "62d8ba"
              },
              {
                "name": "Numpad",
                "pos": 1,
                "active": true,
                "uuid": "8531d4"
              },
              {
                "name": "Chrome",
                "pos": 2,
                "active": false,
                "uuid": "17df94"
              }
            ],
            "items": {
              "$ref": "#/components/schemas/LayerInfo"
            }
          }
        }
      },
      "LayerInfo": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Media"
          },
          "pos": {
            "type": "integer",
            "example": 0
          },
          "active": {
            "type": "boolean",
            "example": true
          },
          "uuid": {
            "type": "string",
            "example": "62d8ba"
          }
        }
      },
      "Layer": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Media"
          },
          "active": {
            "type": "boolean"
          },
          "row0": {
            "type": "array",
            "example": [
              {
                "name": "Play",
                "key_code": 171
              },
              {
                "name": "next",
